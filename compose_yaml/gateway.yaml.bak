version: "3.2"

services:    
   woven_gateway:
        image: woven_gateway:${GATEWAY_IMAGE_TAG}
        container_name: gateway
        ports:
            - "8515:8515"
            - "8400:8400"
           # - "8123:8123"
        depends_on:
            - woven_mysql
            #- woven_discovery

        #mac_address: 52:54:00:32:35:3b
        environment:
            WOVEN_BOOT: woven_gateway
        volumes:                      
            - "gateway_con:/woven_gateway/conf:rw"
            - "gateway_log:/woven_gateway/logs:rw"
            - /mytmp:/tmpmytmp
        #extra_hosts:
            #- "baymax-deploy-03:192.168.2.81"
        network_mode: "host"
